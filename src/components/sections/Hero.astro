---
import { Image } from 'astro:assets'
import  { basics } from '../../cv-en.json'
import Section from '../Section.astro'

const { name, label, image, location, profiles, phone, summary, email } = basics
const { city, country } = location
---
<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{summary}</h2>
            <span>
                <!--icon -->
                {city}, {country}
            </span>
        </div>
        <footer>
            {
                email && (
                    <a
                    href={`mailto:${email}`}
                    title={`Send email to ${name} (${email})`}
                    target="_blank"
                    rel="noopener noreferrer"
                    >
                    ✉️
                    </a>
                )
            }
        </footer>
        <figure>
            <Image src={image} alt={name} inferSize={true}/>
        </figure>
    </div>
</Section>

